@model Week5Assignment.Models.UpdateEmployeeModel

<script src="~/Scripts/Employee/employee.js" type="text/javascript"></script>

<h2>Update Employee</h2>

<div class="row">
	<div class="col-md-3">
		<label>Search Last Name</label>
	</div>
	<div class="col-md-7">
		<input id="searchString" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<button class="btn btn-primary" onclick="searchEmployee()">Search</button>
	</div>
</div>

<hr />

<div id="successMessage" class="hidden alert alert-success">
	Successfully Updated!
</div>
<div id="errorMessage" class="hidden alert alert-danger">
	Error Occurred!
</div>

<input id="employeeId" type="hidden" />

<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-2">
		<label>First Name</label>
	</div>
	<div class="col-md-3">
		<input id="firstName" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Department</label>
	</div>
	<div class="col-md-3">
		<input id="department" type="text" class="form-control" />
	</div>
	<div class="col-md-1"></div>
</div>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-2">
		<label>Middle Name</label>
	</div>
	<div class="col-md-3">
		<input id="middleName" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Job Title</label>
	</div>
	<div class="col-md-3">
		<input id="jobTitle" type="text" class="form-control" />
	</div>
	<div class="col-md-1"></div>
</div>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-2">
		<label>Last Name</label>
	</div>
	<div class="col-md-3">
		<input id="lastName" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Salary</label>
	</div>
	<div class="col-md-3">
		<input id="salary" type="text" class="form-control" />
	</div>
	<div class="col-md-1"></div>
</div>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-2">
		<label>Birth Date</label>
	</div>
	<div class="col-md-3">
		<input id="birthDate" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Salary Type</label>
	</div>
	<div class="col-md-3">
		@{
			List<SelectListItem> listItems = new List<SelectListItem>();
			listItems.Add(new SelectListItem
			{
				Text = "Annual",
				Value = "Annual"
			});
			listItems.Add(new SelectListItem
			{
				Text = "Hourly",
				Value = "Hourly",
			});
		}
		<input id="salaryType" type="text" class="form-control" />
	</div>
	<div class="col-md-1"></div>
</div>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-2">
		<label>Hire Date</label>
	</div>
	<div class="col-md-3">
		<input id="hireDate" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Available Hours</label>
	</div>
	<div class="col-md-3">
		<input id="availableHours" type="text" class="form-control" />
	</div>
	<div class="col-md-1"></div>
</div>

<div class="row"></div>
<div class="col-md-12"></div>

<div class="row">

	<div class="col-md-8"></div>
	<div class="col-md-2">
		<button class="btn btn-primary margin-top-md margin-left-md" onclick="updateEmployee()">Save</button>
	</div>

		<div class="col-md-2">
			<button class="btn btn-secondary margin-top-md margin-left-md" onclick="clearInput(), clearSearch()">Clear</button>
		</div>

</div>



