@model Week5Assignment.Models.EmployeeDisplayModel

@{
	if (Session["userID"] == null)
	{
		Response.Redirect("/Login/Login");
	}
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>index</title>
</head>
<body>
	<div class="container">
		<h2>All Employees</h2>
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Employee ID</th>
						<th>First Name</th>
						<th>Middle Initial</th>
						<th>Last Name</th>
						<th>Hire Date</th>
						<th>Salary</th>
						<th>Salary Type</th>
						<th>Job Title</th>
						<th>Department</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var employee in Model.Employee)
					{
						<tr>
							<td>
								@employee.EmployeeID
							</td>
							<td>
								@employee.FirstName
							</td>
							<td>
								@employee.MiddleInitial
							</td>
							<td>
								@employee.LastName
							</td>
							<td>
								@employee.HireDateString
							</td>
							<td>
								@employee.SalaryString
							</td>
							<td>
								@employee.SalaryType
							</td>
							<td>
								@employee.JobTitle
							</td>
							<td>
								@employee.Department
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>
