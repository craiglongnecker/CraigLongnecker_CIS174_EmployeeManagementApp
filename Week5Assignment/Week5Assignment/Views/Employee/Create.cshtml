@model Week5Assignment.Models.CreateEmployeeModel

@{
	if (Session["userID"] == null)
	{
		Response.Redirect("/Login/Login");
	}
}

<script src="~/Scripts/Employee/employee.js" type="text/javascript"></script>

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Enter New Employee</title>
</head>
<body>
	<h2> Enter New Employee</h2>
	<div>
		<form>
			<div id="successMessage" class="hidden alert alert-success">
				Successfully Created!
			</div>
			<div id="errorMessage" class="hidden alert alert-danger">
				Error Occurred!
			</div>

			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-2">
					<label for="FirstName">First Name</label>
				</div>
				<div class="col-md-3">
					@Html.EditorFor(Model => Model.FirstName)
				</div>
				<div class="col-md-2">
					<label for="FirstName">Department</label>
				</div>
				<div class="col-md-3">
					@Html.EditorFor(Model => Model.Department)
				</div>
				<div class="col-md-1"></div>
			</div>
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-2">
					<label for="MiddleName">Middle Name</label>
				</div>
				<div class="col-md-3">
					@Html.EditorFor(Model => Model.MiddleName)
				</div>
				<div class="col-md-2">
					<label for="Job Title">Job Title</label>
				</div>
				<div class="col-md-3">
					@Html.EditorFor(Model => Model.JobTitle)
				</div>
				<div class="col-md-1"></div>
			</div>
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-2">
					<label for="LastName">Last Name</label>
				</div>
				<div class="col-md-3">
					@Html.EditorFor(Model => Model.LastName)
				</div>
				<div class="col-md-2">
					<label for="FirstName">Salary</label>
				</div>
				<div class="col-md-3">
					<input id="Salary" type="number" min="30000.00" max="300000.00" step="5000.00" value="75000.00" />
				</div>
				<div>
					@Html.ValidationMessageFor(Model => Model.Salary)
				</div>
				<div class="col-md-1"></div>
			</div>
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-2">
					<label for="BirthDate">Birth Date</label>
				</div>
				<div class="col-md-3">
					<input id="birthDate" type="date" name="birthDate" />
				</div>
				<div>
					@Html.ValidationMessageFor(Model => Model.BirthDate)
				</div>
				<div class="col-md-2">
					<label for="SalaryType">Salary Type</label>
				</div>
				<div class="col-md-3">
					@{List<SelectListItem> listItems = new List<SelectListItem>();
						listItems.Add(new SelectListItem
						{
							Text = "Annual",
							Value = "Annual"
						});
						listItems.Add(new SelectListItem
						{
							Text = "Hourly",
							Value = "Hourly",
						});
					}
					@Html.DropDownListFor(Model => Model.SalaryType, listItems, "-- Select Salary Type --")
				</div>
				<div class="col-md-1"></div>
			</div>
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-2">
					<label for="HireDate">Hire Date</label>
				</div>
				<div class="col-md-3">
					<input id="hireDate" type="date" name="hireDate" />
				</div>
				<div>
					@Html.ValidationMessageFor(Model => Model.HireDate)
				</div>
				<div class="col-md-2">
					<label for="AvailableHours">Available Hours</label>
				</div>
				<div class="col-md-3">
					@Html.EditorFor(Model => Model.AvailableHours)
				</div>
				<div class="col-md-1">
				</div>
			</div>
			<div class="row"></div>
			<div class="col-md-12"></div>
			<div class="row">
				<div class="col-md-8"></div>
				<div class="col-md-1">
					<button class="btn btn-primary margin-top-md margin-left-md" type="submit" onclick="">Create</button>
				</div>
				<div class="col-md-1">
					<button class="btn btn-secondary margin-top-md margin-left-md" type="reset" onclick="">Clear</button>
				</div>
				<div class="col-md-2"></div>
			</div>
		</form>
	</div>
</body>
</html>
