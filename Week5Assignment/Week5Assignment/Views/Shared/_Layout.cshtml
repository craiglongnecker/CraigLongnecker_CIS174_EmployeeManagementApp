<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>CIS 174 Employee Manager</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.6.2.js"></script>
	<script src="~/Scripts/Employee/employee.js" type="text/javascript"></script>

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	<a class="navbar-brand" href="@Url.Action("Index", "Home")">CIS 174 Employee Manager</a>
	<div>
		<ul class="navbar-nav">
			<li class="nav-item active">
				<a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
			</li>
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
					aria-haspopup="true" aria-expanded="false">Employees</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdown">
					<a class="dropdown-item" href="@Url.Action("Index", "Employee")">View All Employees</a>
					<a class="dropdown-item" href="@Url.Action("Create", "Employee")">Enter New Employee</a>
					<a class="dropdown-item" href="@Url.Action("Update", "Employee")">Update Employee</a>
				</div>
			</li>
		</ul>
	</div>
</nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Craig Longnecker</p>
        </footer>
    </div>
	<script>
		$(document).ready(function () {
			$('.datetimepicker').datetimepicker({
			format: 'lll'
			});
		});
	</script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>